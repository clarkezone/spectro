<ContentDialog
    x:Class="Spectro.Controls.LoginControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spectro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="uLogin to NewsBlur service"
    x:Uid="Login_DialogTitle"
    PrimaryButtonText="uLogin"
    SecondaryButtonText="uCancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    DefaultButton="Primary"
Width="500"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Uid="Login_UserName" VerticalAlignment="Center">uUser Name</TextBlock>
        <TextBox Grid.Column="1" x:Name="username" Width="200" VerticalAlignment="Center"></TextBox>

        <TextBlock Grid.Row="1" x:Uid="Login_Password" VerticalAlignment="Center">uPassword</TextBlock>

        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="password" Width="200" VerticalAlignment="Center"></PasswordBox>
    </Grid>
</ContentDialog>
